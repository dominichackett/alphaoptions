{
  "name": "multi-asset-options-protocol",
  "version": "1.0.0",
  "description": "24/7 Multi-asset options protocol with real Chainlink oracles",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain",
    "fork:start": "hardhat node",
    "fork:deploy": "hardhat run scripts/deploy-fork.ts --network hardhat",
    "fork:test": "hardhat run scripts/test-options-fork.ts --network hardhat",
    "fork:test-stocks": "hardhat run scripts/test-stock-options.ts --network hardhat",
    "fork:test-forex": "hardhat run scripts/test-forex-options.ts --network hardhat",
    "polygon:start": "hardhat node --port 8546 --network polygonFork",
    "polygon:deploy": "hardhat run scripts/deploy-fork.ts --network polygonFork",
    "polygon:test-stocks": "hardhat run scripts/test-polygon-stocks.ts --network polygonFork",
    "bsc:start": "hardhat node --port 8547 --network bscFork",
    "bsc:deploy": "hardhat run scripts/deploy-fork.ts --network bscFork",
    "bsc:test-tsla": "hardhat run scripts/test-tsla-options.ts --network bscFork",
    "test:all-chains": "npm run fork:test && npm run polygon:test-stocks && npm run bsc:test-tsla",
    "deploy:all-chains": "npm run fork:deploy && npm run polygon:deploy && npm run bsc:deploy",
    "test:whales": "hardhat run scripts/test-whale-accounts.ts --network hardhat",
    "test:large-trades": "hardhat run scripts/test-large-positions.ts --network hardhat",
    "test:24x7-stocks": "hardhat run scripts/test-24x7-stocks.ts --network hardhat",
     "test:1inch": "hardhat test test/integration/03-1inch-integration.test.js",
     "test:after-hours": "hardhat run scripts/test-after-hours-trading.ts --network hardhat",
    "test:weekend-trading": "hardhat run scripts/test-weekend-options.ts --network hardhat",
    "deploy:ethereum": "hardhat run scripts/deploy.ts --network ethereum",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "deploy:bsc": "hardhat run scripts/deploy.ts --network bsc",
    "deploy:arbitrum": "hardhat run scripts/deploy.ts --network arbitrum",
     "deploy:fork": "hardhat run scripts/deploy-fork.js --network localhost",
    "deploy:1inch": "hardhat run scripts/deploy-1inch-integration.js --network localhost",

    "verify:ethereum": "hardhat verify --network ethereum",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:bsc": "hardhat verify --network bsc",
    "test": "hardhat test",
    "test:integration": "hardhat test test/integration/*.test.js",
    "test:contracts": "hardhat test test/contracts/*.test.js",
    "test:lifecycle": "hardhat test test/integration/01-full-option-lifecycle.test.js",
    "test:24x7": "hardhat test test/integration/02-24x7-stock-options.test.js",
    "test:oracle": "hardhat test test/contracts/PriceOracle.test.js",
    "test:all": "node test/test-runner.js",

    "test:quick": "hardhat test test/integration/01-full-option-lifecycle.test.js --grep 'Setup Verification'",
    "test:killer-feature": "hardhat test test/integration/02-24x7-stock-options.test.js --grep 'KILLER FEATURE'",
    "test:fork": "HARDHAT_NETWORK=localhost hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "cache:check": "node scripts/check-cache-size.js",
    "cache:clean": "rm -rf cache artifacts typechain-types",
    "cache:reset": "rm -rf .hardhat/network-fork-cache/",
    "node": "hardhat node",
    "console": "hardhat console"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/node": "^20.0.0",
    "chai": "^5.2.1",
    "dotenv": "^16.3.0",
    "hardhat": "^2.19.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "defi",
    "options",
    "chainlink",
    "1inch",
    "ethereum",
    "polygon",
    "bsc",
    "stocks",
    "forex",
    "24x7"
  ],
  "dependencies": {
    "@1inch/limit-order-protocol": "^2.0.5"
  }
}
